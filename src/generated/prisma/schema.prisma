generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models for site content
model SiteMessage {
  id        String   @id @default(cuid())
  page      String // e.g., "homepage"
  key       String // Message key e.g., "phaseTitle"
  value     String // Message value
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([page, key])
}

// Model for site images
model SiteImage {
  id          String   @id @default(cuid())
  originalKey String // Original image key/path e.g., "/ye.png"
  currentPath String // Current path in public folder
  altText     String // Alt text for accessibility
  uploadedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([originalKey])
}
